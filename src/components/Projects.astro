---
import { Icon } from "astro-icon";
const { href, src, title, git } = Astro.props;
---

<div
  class="max-w-sm mx-4 mb-4 border rounded-lg shadow bg-gray-800 border-gray-700"
>
  <a href={href} target="_blank">
    <img class="rounded-t-lg" src={src} alt="website screenshot" />
  </a>
  <div class="p-5">
    <slot name="icon" />
    <a href={href} target="_blank">
      <h5
        class="mb-2 text-2xl font-bold tracking-tight underline text-[#f1f1f1]"
      >
        {title}
      </h5>
    </a>
    <slot name="description" />
    <a
      href={href}
      target="_blank"
      class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-[#f1f1f1] rounded-lg focus:ring-4 focus:outline-none bg-blue-600 hover:bg-blue-700 focus:ring-blue-800"
    >
      Visit the Site
      <svg
        aria-hidden="true"
        class="w-4 h-4 ml-2 -mr-1"
        fill="currentColor"
        viewBox="0 0 20 20"
        xmlns="http://www.w3.org/2000/svg"
        ><path
          fill-rule="evenodd"
          d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
          clip-rule="evenodd"></path></svg
      >
    </a>
    <a
      href={git}
      target="_blank"
      class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-[#f1f1f1] rounded-lg focus:ring-4 focus:outline-none bg-blue-600 hover:bg-blue-700 focus:ring-blue-800"
    >
      GitHub Repo
      <svg
        aria-hidden="true"
        class="w-4 h-4 ml-2 -mr-1"
        fill="currentColor"
        viewBox="0 0 20 20"
        xmlns="http://www.w3.org/2000/svg"
        ><path
          fill-rule="evenodd"
          d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
          clip-rule="evenodd"></path></svg
      >
    </a>
  </div>
</div>
